---
import { type RichTextItemResponse } from "@notionhq/client/build/src/api-endpoints";

type Props = {
  richText: RichTextItemResponse;
};

const { richText } = Astro.props as Props;

const { href, annotations, plain_text } = richText;
---

<span
  class={`${annotations.bold && "font-bold"} ${annotations.italic && "italic"}`}
>
  {
    href ? (
      <a class="text-zinc-500 hover:text-zinc-200" href={href}>
        {plain_text}
      </a>
    ) : (
      plain_text
    )
  }
</span>
