---
import Layout from "src/layouts/Layout.astro";
import BuiltWith from "./BuiltWith.astro";

export interface Props {
  title: string;
}

const { title = "Quattonary" } = Astro.props as Props;
---

<Layout title={title}>
  <BuiltWith tool="Astro" />

  <section>
    <article>
      <slot />
    </article>
  </section>
</Layout>

<style is:global>
  article {
    @apply prose prose-invert;
    margin: auto;
  }
</style>
