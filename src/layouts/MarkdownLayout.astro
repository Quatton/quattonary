---
import type { ContentCollectionKey } from "astro:content";
import Layout from "src/layouts/Layout.astro";

export interface Props {
  title: string;
  path?: string;
  collection?: ContentCollectionKey
}

const { title = "Quattonary", path, collection } = Astro.props as Props;
---

<Layout {...{title, path, collection}}>
  <section>
    <article>
      <slot />
    </article>
  </section>
</Layout>

<style is:global>
  article {
    @apply prose prose-invert;
    margin: auto;
  }

  section {
    padding: 2rem;
  }
</style>
