---
import type { CollectionKey } from "astro:content";
import { ViewTransitions } from "astro:transitions";
import Header from "./Header.astro";
export interface Props {
  title: string;
  path?: string;
  collection?: CollectionKey;
}

const { title, path = "", collection } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <!-- scroll timeline polyfill -->
    <script
      src="https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js"
    ></script>
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
    <meta
      name="description"
      content="Quattonary is my personal website where I share cool projects I build
    and post tech-related blogs."
    />
  </head>

  <body>
    <Header path={path} collection={collection} />
    <main>
      <slot />
    </main>
    <style lang="scss">
      @use "src/styles/global.scss" as *;

      @import url("https://fonts.googleapis.com/css2?family=Kumar+One+Outline&family=M+PLUS+Rounded+1c:wght@100;300;400;500;700&family=Mitr:wght@200;300;400;500&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Bai+Jamjuree:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@300;400;500;700;900&display=swap");

      :root {
        --font-size-base: #{$font-size-base};
        --font-size-lg: #{$font-size-lg};
        --font-size-xl: #{$font-size-xl};

        --color-bg: #{$color-bg};
        --color-text: #{$color-text};
        --color-border: #{$color-border};

        --color-primary-dark: #{$color-primary-dark};
        --color-primary: #{$color-primary};
        --color-secondary-dark: #{$color-secondary-dark};
        --color-secondary: #{$color-secondary};
        --color-accent: #{$color-accent};

        --color-light: #{$color-light};
        --color-neutral: #{$color-neutral};
        --color-gray: #{$color-gray};

        --color-vue: #{$color-vue};
      }

      *,
      *::before,
      *::before {
        box-sizing: border-box;
        color-scheme: dark;
      }

      html {
        font-family:
          "Lato",
          "Bai Jamjuree",
          "Zen Maru Gothic",
          ui-sans-serif,
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          "Helvetica Neue",
          Arial,
          "Noto Sans",
          sans-serif,
          "Apple Color Emoji",
          "Segoe UI Emoji",
          "Segoe UI Symbol",
          "Noto Color Emoji";
        font-size: var(--font-size-base);
        color: var(--color-text);
        margin: 0;
      }

      body {
        display: flex;
        flex-direction: column;
        margin: 0;
        height: 100vh;
        // perspective: 1000px;
      }

      body > * {
        flex: 1 1 0px;
      }

      main {
        @apply scroll-smooth relative;
        background-color: var(--color-bg);
        overflow: auto;
      }

      :global(code) {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      :global(.task-list-item) {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
    </style>
  </body>
</html>
